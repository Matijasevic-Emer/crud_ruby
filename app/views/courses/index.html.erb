<div class="bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-center text-blue-600 mb-4">Cursos disponibles!!</h1>
<%= link_to new_course_path do %>
    <div class="inline-block m-2 p-2 bg-[#1E3A8A] text-white text-center font-sans font-medium py-2 px-4 rounded-lg hover:text-blue-400 hover:underline">
    Agregar nuevo
    </div>
<%end%>
  <ul class="space-y-4">
    <% @courses.each do |course| %>
    <%= link_to course do %>
      <li class="text-lg text-gray-800 bg-gray-100 p-4 rounded-lg shadow-md">
        <%= course.title %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
