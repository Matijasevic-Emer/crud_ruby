<h1 class="text-4xl font-bold">Courses#new</h1>
<p class="mb-8">Find me in app/views/courses/new.html.erb</p>
<%= form_for(@course) do |f| %>
  <div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_area :description, placeholder: "De que se trata el curso", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :teacher_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.select :teacher_id, Teacher.all.map { |t| [t.name, t.id] }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= f.label :visible, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.check_box :visible, class: "mr-2 leading-tight" %>
  </div>

  <div class="mb-4">
    <%= f.label :published, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.check_box :published, class: "mr-2 leading-tight" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Create Course", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

