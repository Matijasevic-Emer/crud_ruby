<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>
<%= form_for(@course) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, placeholder:"De que se trata el curso" %>
  </p>

  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>

  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
